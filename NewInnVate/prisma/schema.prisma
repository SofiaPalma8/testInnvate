// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Base de datos local para desarrollo
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   // Cambiado a String para evitar problemas con enum en SQLite
  createdAt DateTime @default(now())
  
  @@map("users") // Cambiamos el nombre de la tabla en la base de datos para seguir buenas pr√°cticas
}
